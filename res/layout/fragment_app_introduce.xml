<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootview"
    android:scrollbars="none"
    android:background="@color/color_f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:id="@+id/view_pics"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        	<LinearLayout
        	    android:id="@+id/llt_pics"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:orientation="horizontal">
        	    
        	</LinearLayout>
       
   		 </HorizontalScrollView>
   		 <View 
   		     android:id="@+id/diliver_1"
   		     android:layout_below="@+id/view_pics"
   		     android:layout_width="match_parent"
   		     android:layout_height="@dimen/diliver_line_height"
   		     android:background="@color/color_dddddd"/>
   		 <RelativeLayout 
   		     android:id="@+id/rlt_1"
   		     android:layout_width="match_parent"
   		     android:layout_height="wrap_content"
   		     android:layout_marginTop="15dp"
   		     android:layout_below="@+id/diliver_1">
   		      <TextView 
	   		     android:id="@+id/tv_introduce_lable"
	   		     style="@style/Txtstyle_30_333333"
	   		     android:layout_width="wrap_content"
	   		     android:layout_height="wrap_content"
	   		     android:drawableLeft="@drawable/icon_introduce"
	   		     android:gravity="center"
	   		     android:layout_centerVertical="true"
	   		     android:drawablePadding="@dimen/title_bar_padding"
	   		     android:layout_marginLeft="@dimen/title_bar_padding"
	   		     android:text="@string/app_introduce"
	   		     />
	   		 <ImageView
	   		     android:id="@+id/ibtn_expand_"
	   		     android:layout_alignParentRight="true"
				 android:layout_centerVertical="true"
				 android:paddingLeft="@dimen/title_bar_padding"
				 android:paddingRight="@dimen/title_bar_padding"
	   		     android:layout_width="wrap_content"
	   		     android:layout_height="wrap_content"
	   		     android:src="@drawable/icon_expand"/>
   		 </RelativeLayout>
   		 <TextView 
   		     style="@style/Txtstyle_25_666666"
   		     android:textSize="@dimen/txt_middle"
   		     android:id="@+id/tv_introduce_content"
   		     android:layout_below="@+id/rlt_1"
   		     android:layout_marginTop="@dimen/title_bar_padding"
   		     android:layout_marginLeft="@dimen/title_bar_padding"
   		     android:layout_marginRight="@dimen/title_bar_padding"
   		     android:layout_width="match_parent"
   		     android:layout_height="wrap_content"
   		     android:minHeight="@dimen/introduce_content_minheigt"
   		     android:lineSpacingMultiplier="1.2"
   		     android:gravity="left|center_vertical"
   		     android:singleLine="true"
   		    />
	  <View 
	     android:id="@+id/diliver_2"
	     android:layout_below="@+id/tv_introduce_content"
	     android:layout_width="match_parent"
	     android:layout_height="@dimen/diliver_line_height"
	     android:layout_margin="@dimen/title_bar_padding"
	     android:background="@color/color_dddddd"/>
	   <TextView 
	     android:id="@+id/tv_related_lable"
	     style="@style/Txtstyle_30_333333"
	     android:layout_below="@+id/diliver_2"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:drawableLeft="@drawable/icon_related"
	     android:gravity="center"
	     android:layout_centerVertical="true"
	     android:drawablePadding="@dimen/title_bar_padding"
	     android:layout_marginLeft="@dimen/title_bar_padding"
	     android:text="@string/app_related"
	     />
	   <com.zxly.market.view.RelativeLayoutForGridView
           android:id="@+id/gv_recomand"
           android:layout_below="@+id/tv_related_lable"
           android:layout_marginLeft="@dimen/title_bar_padding"
           android:layout_marginRight="@dimen/title_bar_padding"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="center_horizontal"
           android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</ScrollView>
