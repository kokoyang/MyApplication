<?xml version="1.0" encoding="utf-8"?>
<com.zxly.market.view.CommenLoadingView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/color_f5f5f5">
  	<RelativeLayout
  	    android:id="@+id/rlt_loading"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true">
    <ProgressBar
        android:id="@+id/progressbar_"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
	   />
    <TextView
        android:id="@+id/message"
        android:layout_below="@+id/progressbar_"
        style="@style/Txtstyle_30_333333"  
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load_more"/>
	</RelativeLayout>
	<ViewStub 
	    android:id="@+id/stu_emptyview"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:clickable="true"
	    android:layout="@layout/empty_data"/>
	<ViewStub 
	    android:id="@+id/stu_netview"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:clickable="true"
	    android:layout="@layout/network_error"/>
</com.zxly.market.view.CommenLoadingView>
