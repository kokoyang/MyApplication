<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/title_bar_padding"
    android:paddingLeft="@dimen/title_bar_padding"
    android:paddingRight="@dimen/title_bar_padding">
    <ImageView 
        android:id="@+id/iv_topic"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:scaleType="fitXY"
        android:background="@drawable/icon_banner_defalt"/>
	<TextView 
	    android:id="@+id/tv_topic_title"
	    android:layout_below="@+id/iv_topic"
	    style="@style/Txtstyle_30_333333"
	    android:layout_marginTop="@dimen/item_label_margintop"
	    android:layout_marginBottom="@dimen/item_label_margintop"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="专题标题"/>
	<View 
	    android:layout_below="@+id/tv_topic_title"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/diliver_line_height"
	    android:background="@color/color_dddddd"/>
</RelativeLayout>
