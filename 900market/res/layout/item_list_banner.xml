<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_f3f3f3">
    <View
        android:id="@+id/diliver_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diliver_line_height"
        android:background="@color/color_dddddd"/>
	<RelativeLayout
	    android:id="@+id/rlt_content"
	    android:layout_marginTop="@dimen/title_bar_padding"
	    android:padding="@dimen/title_bar_padding"
	    android:layout_below="@+id/diliver_1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/com_btn_bg2">
	    <TextView 
	        android:id="@+id/tv_lable"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/special_label"
	        android:textColor="@color/color_white"
	        android:padding="2dp"
	        android:textSize="@dimen/txt_small"
	        android:background="@color/color_6fc9e9"/>
	    <TextView 
	       android:id="@+id/tv_title"
	       android:layout_toRightOf="@+id/tv_lable"
	       android:layout_marginLeft="3dp"
	       android:padding="2dp"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:maxWidth="250dp"
	       android:singleLine="true"
	       android:text="全场八折全场八折全场八折全场八折全场八折全场八折"
	       android:textColor="@color/color_333333"
	       android:textSize="@dimen/txt_nomal"/>
	    <ImageView 
	        android:id="@+id/iv_content"
	        android:layout_marginTop="@dimen/title_bar_padding"
	        android:layout_below="@+id/tv_lable"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:background="@drawable/icon_banner_defalt"/>
	</RelativeLayout>
	<View
        android:id="@+id/diliver_2"
        android:layout_marginTop="@dimen/title_bar_padding"
        android:layout_below="@+id/rlt_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diliver_line_height"
        android:background="@color/color_dddddd"/>
</RelativeLayout>
