<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5">

    <RelativeLayout
        android:id="@+id/rlt_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_box_height"
        android:layout_marginTop="@dimen/search_box_margintop"
        android:layout_marginRight="@dimen/title_bar_padding"
        >
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/title_bar_padding"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:drawableLeft="@drawable/icon_back"/>
        <RelativeLayout 
            android:layout_toRightOf="@+id/tv_back"
            android:layout_marginLeft="@dimen/title_bar_padding"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/search_box_paddingleft"
            android:background="@drawable/btn_round_border_999999">
            
            <com.zxly.market.view.EditTextWithDelete
                android:id="@+id/et_key"
                style="@style/Txtstyle_30_333333"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:hint="大家都在搜"
                android:background="@null"
                android:layout_marginRight="6dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/diliver"/>   
            <View 
                android:id="@+id/diliver"
                android:layout_width="@dimen/diliver_line_height"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/btn_search"
                android:background="@color/color_dddddd"/>
            <ImageView 
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/btn_search_padingleft"
                android:paddingRight="@dimen/search_box_paddingleft"
                android:src="@drawable/icon_search"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/com_btn_halfcorner_bg"/>
        </RelativeLayout>
    </RelativeLayout>
    <View 
        android:id="@+id/diliver_2"
        android:layout_below="@+id/rlt_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diliver_line_height"
        android:layout_marginTop="@dimen/search_box_margintop"
        android:background="@color/color_dddddd"/>
    <RelativeLayout 
        android:id="@+id/emptyview"
        android:layout_below="@+id/diliver_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_empty"
            style="@style/Txtstyle_25_666666" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:drawableRight="@drawable/jiong"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:text="@string/search_null"
            />
        <View 
	        android:layout_below="@+id/tv_empty"
	        android:layout_width="match_parent"
	        android:layout_marginLeft="@dimen/title_bar_padding"
	        android:layout_marginRight="@dimen/title_bar_padding"
	        android:layout_height="@dimen/diliver_line_height"
	        android:layout_centerHorizontal="true"
	        android:background="@color/color_dddddd"/>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/hot_search_key"
        android:layout_below="@+id/emptyview"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/hot_search_margintop"
        android:layout_marginLeft="@dimen/title_bar_padding"
        android:layout_marginRight="@dimen/title_bar_padding"
        android:layout_height="match_parent">
        
       <RelativeLayout 
           android:id="@+id/rlt_lable"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
        <TextView 
	        android:id="@+id/tv_lable_left"
	        style="@style/Txtstyle_25_666666"
	        android:textColor="@color/color_333333"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="@string/hot_search"/>
        <ImageView 
            android:id="@+id/iv_refresh"
            android:layout_toLeftOf="@+id/tv_lable_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="6dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_fresh"/>
	    <TextView 
	        android:id="@+id/tv_lable_refresh"
	        style="@style/Txtstyle_25_666666"
	        android:layout_alignParentRight="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="@string/next_page"/>
	    </RelativeLayout>
	    <GridView 
	        android:id="@+id/gv_keys"
	        style="@style/ListView_style"
	        android:layout_below="@+id/rlt_lable"
	        android:layout_marginTop="@dimen/keys_gridview_margintop"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:numColumns="3"
	        android:verticalSpacing="@dimen/search_box_margintop"
	        android:horizontalSpacing="@dimen/search_box_margintop"
	        ></GridView>
    </RelativeLayout>
    <com.zxly.market.view.LoadmoreListView
        android:id="@+id/lv_app"
        style="@style/ListView_style"
        android:layout_below="@+id/diliver_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <include 
	    android:id="@+id/loading_view"
	    android:layout_below="@+id/rlt_top"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    layout="@layout/commen_lodaing"/>
</RelativeLayout>
