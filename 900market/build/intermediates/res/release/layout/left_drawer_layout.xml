<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/rootview"
    android:background="@color/color_white">
    <include 
        android:id="@+id/title_bar"
        android:layout_height="@dimen/title_bar_height"
        android:layout_width="match_parent"
        layout="@layout/include_title_bar"/>

    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_top_slidemenu" />
	<TextView 
	    android:id="@+id/tv_feedback"
	    android:padding="@dimen/feeback_txt_padding"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textSize="@dimen/txt_nomal"
	    android:focusable="false"  
	    android:clickable="true"
	    android:textColor="@color/color_57be17"
	    android:text="@string/feedbak_lable"
	    android:background="@drawable/com_btn_bg"/>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/diliver_line_height"
	    android:layout_marginLeft="@dimen/title_bar_padding"
	    android:layout_marginRight="@dimen/title_bar_padding"
	    android:background="@color/color_dddddd"/>
	<TextView 
	    android:id="@+id/tv_checkupdate"
	    android:padding="@dimen/feeback_txt_padding"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textSize="@dimen/txt_nomal"
	    android:textColor="@color/color_333333"
	    android:focusable="false"  
	    android:clickable="true"
	    android:text="@string/check_update_lable"
	    android:background="@drawable/com_btn_bg"/>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/diliver_line_height"
	    android:layout_marginLeft="@dimen/title_bar_padding"
	    android:layout_marginRight="@dimen/title_bar_padding"
	    android:background="@color/color_dddddd"/>
	<TextView 
	    android:id="@+id/tv_aboutus"
	    android:padding="@dimen/feeback_txt_padding"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:focusable="false"  
	    android:clickable="true"
	    android:textSize="@dimen/txt_nomal"
	    android:textColor="@color/color_333333"
	    android:text="@string/about_us"
	    android:background="@drawable/com_btn_bg"/>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/diliver_line_height"
	    android:layout_marginLeft="@dimen/title_bar_padding"
	    android:layout_marginRight="@dimen/title_bar_padding"
	    android:background="@color/color_dddddd"/>
</LinearLayout>
