<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/progress_hud_bg"
    android:padding="10dp">

    <ImageView
        android:id="@+id/spinnerImageView"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_centerVertical="true"
        android:background="@anim/spinner" />

    <TextView
        android:id="@+id/message"
        android:layout_toRightOf="@+id/spinnerImageView"
        android:layout_marginLeft="@dimen/dot_size"
        style="@style/Txtstyle_25_666666"
        android:textColor="@color/color_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Message"/>

</RelativeLayout>
