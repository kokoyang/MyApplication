<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    
    <LinearLayout
	    android:layout_width="304dp"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="@drawable/bg_round_white">
    	<TextView 
    	    android:textColor="@color/color_57be17"
    	    android:textSize="@dimen/txt_nomal"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_margin="@dimen/dialog_aboutus_margin"
    	    android:text="@string/share"/>
    	<View 
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/diliver_line_height"
		    android:background="@color/color_57be17"/>
    	<ListView 
    	    android:id="@+id/lv_share"
    	    style="@style/ListView_style"
    	    android:layout_width="match_parent"
    	    android:layout_height="200dp"
    	    android:divider="@color/color_dddddd"
    	    android:scrollbars="none"
    	    android:dividerHeight="@dimen/diliver_line_height"
    	    android:paddingLeft="@dimen/title_bar_padding"
            android:paddingRight="@dimen/title_bar_padding"
    	    />
    	<View 
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/diliver_line_height"
		    android:background="@color/color_dddddd"/>
    	<TextView 
    	    android:id="@+id/cancel"
    	    style="@style/Txtstyle_30_666666"
    	    android:textColor="@color/color_999999"
    	    android:layout_width="match_parent"
    	    android:layout_height="45dp"
    	    android:gravity="center"
    	    android:text="@string/cancel"/>
    </LinearLayout>

</LinearLayout>
