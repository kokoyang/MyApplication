	<TextView 
	    style="@style/Txtstyle_25_999999"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="@dimen/setting_margin"
	    android:layout_marginLeft="@dimen/title_bar_padding"
	    android:textColor="@color/color_666666"
	    android:text="@string/ather_setting"/>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/diliver_line_height"
