	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/setting_switcher"/>
	</RelativeLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/diliver_line_height"
	    android:layout_marginLeft="@dimen/title_bar_padding"
	    android:layout_marginRight="@dimen/title_bar_padding"
	    android:background="@color/color_dddddd"/>

	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="@dimen/title_bar_padding"
	    android:background="@color/color_white"
	    android:orientation="vertical">
	    <TextView 
	        style="@style/Txtstyle_30_333333"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="@string/open_notification"/>
	    <CheckBox 
	        android:id="@+id/open_notify_status"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:button="@null"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/setting_switcher"/>
	</RelativeLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/diliver_line_height"
	    android:layout_marginLeft="@dimen/title_bar_padding"
	    android:layout_marginRight="@dimen/title_bar_padding"
	    android:background="@color/color_dddddd"/>
	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="@dimen/title_bar_padding"
	    android:background="@color/color_white"
	    android:orientation="vertical">
	    <TextView 
	        style="@style/Txtstyle_30_333333"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="@string/clear_cache"/>
	    <CheckBox
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:button="@null"
	        android:visibility="invisible"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/setting_switcher"/>
	</RelativeLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/diliver_line_height"
	    android:background="@color/color_dddddd"/>
</LinearLayout>
