	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="@dimen/title_bar_padding"
	    android:background="@color/color_white"
	    android:orientation="vertical">
	    <TextView 
	        style="@style/Txtstyle_30_333333"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="@string/download_and_install"/>
	    <CheckBox 
	        android:id="@+id/down_and_installstatus"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:button="@null"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/setting_switcher"/>
	</RelativeLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/diliver_line_height"
	    android:layout_marginLeft="@dimen/title_bar_padding"
	    android:layout_marginRight="@dimen/title_bar_padding"
	    android:background="@color/color_dddddd"/>

	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="@dimen/title_bar_padding"
	    android:background="@color/color_white"
	    android:orientation="vertical">
	    <TextView 
	        style="@style/Txtstyle_30_333333"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="@string/install_and_delete"/>
	    <CheckBox 
	        android:id="@+id/install_and_delstatus"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:button="@null"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/setting_switcher"/>
	</RelativeLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/diliver_line_height"
	    android:layout_marginLeft="@dimen/title_bar_padding"
	    android:layout_marginRight="@dimen/title_bar_padding"
	    android:background="@color/color_dddddd"/>
	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="@dimen/title_bar_padding"
	    android:background="@color/color_white"
	    android:orientation="vertical">
	    <TextView 
	        style="@style/Txtstyle_30_333333"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="@string/no_wifi"/>
	    <CheckBox 
	        android:id="@+id/nowifistatus"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:button="@null"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/setting_switcher"/>
	</RelativeLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/diliver_line_height"
	    android:background="@color/color_dddddd"/>
	
