<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dialog_aboutus_margin" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_aboutus_margin"
        android:layout_marginLeft="@dimen/dialog_aboutus_margin"
        android:gravity="left"
        android:text="@string/about_us"
        android:textColor="@color/color_57be17"
        android:textSize="@dimen/txt_nomal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/diliver_line_height"
        android:background="@color/color_57be17" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_aboutus_margin"
        android:layout_marginTop="@dimen/dialog_aboutus_margin"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dialog_aboutus_margin"
            android:layout_toRightOf="@+id/iv_logo"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本：1.10"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/txt_smaller" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="copyright©上海移卓科技"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/txt_smaller" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="QQ群：143374639"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/txt_smaller" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="微信号：shyz900"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/txt_smaller" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="@dimen/btn_submit_width"
        android:layout_height="@dimen/btn_submit_height"
        android:layout_marginLeft="@dimen/dialog_aboutus_margin"
        android:layout_marginRight="@dimen/dialog_aboutus_margin"
        android:layout_marginTop="@dimen/searchbar_margin_top"
        android:background="@drawable/btn_round_border_57be17"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/color_57be17"
        android:textSize="@dimen/txt_smaller" />

</LinearLayout><!-- From: file:/D:/AndroidStudioProjects/MyApplication/900market/res/layout/dialog_about_us.xml -->