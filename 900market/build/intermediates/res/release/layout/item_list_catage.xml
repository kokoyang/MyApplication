<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@color/color_white">
        <ImageView
            android:id="@+id/sort_fragment_image_item"
            android:layout_width="@dimen/catage_tit_icon"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/catage_tit_icon" />
        <TextView
            android:id="@+id/sort_fragment_title_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dip"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/txt_big"/>
    </LinearLayout>


    <com.zxly.market.view.SortGridView
        android:id="@+id/sort_fragment_list_item"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"

        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:cacheColorHint="#00000000"
        android:listSelector="@drawable/catogory_item_bg"
        android:numColumns="3"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f5f5f5"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_dddddd"/>
</LinearLayout>


