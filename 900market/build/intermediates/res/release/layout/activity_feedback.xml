<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white" xmlns:app="http://schemas.android.com/apk/res/com.zxly.market">
   <include 
     android:id="@+id/title_bar"
     android:layout_height="@dimen/title_bar_height"
     android:layout_width="match_parent"
     layout="@layout/include_title_bar"/>
   <ScrollView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:scrollbars="none">
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
	<TextView 
	    style="@style/Txtstyle_30_333333"
	    android:layout_marginLeft="@dimen/title_bar_padding"
	    android:layout_marginTop="@dimen/feeback_txt_padding"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/feedback_content"/>
	<com.zxly.market.view.InputCountter
	    android:id="@+id/feedback_content"
	    android:layout_marginTop="@dimen/title_bar_padding"
	    android:layout_marginLeft="@dimen/title_bar_padding"
	    android:layout_marginRight="@dimen/title_bar_padding"
	    app:input_background="@drawable/com_square_border"
	    app:edit_text_size="@dimen/txt_small"
	    app:edit_text_color="@color/color_999999"
	    app:lable_text_size="@dimen/txt_smaller"
	    app:lable_text_color="@color/color_57be17"
	    app:edit_hint="@string/feedback_hint"
	    app:input_padding="@dimen/feeback_input_padding"
	    android:layout_width="match_parent"
	    android:layout_height="155dp"/>
	<TextView 
	    style="@style/Txtstyle_30_333333"
	    android:layout_marginLeft="@dimen/title_bar_padding"
	    android:layout_marginTop="@dimen/feeback_txt_padding"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/contact_way"/>
	<EditText 
	    android:id="@+id/et_contact_way"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/contact_way_height"
	    android:layout_marginTop="@dimen/title_bar_padding"
	    android:layout_marginLeft="@dimen/title_bar_padding"
	    android:layout_marginRight="@dimen/title_bar_padding"
	    android:cursorVisible="true"
	    android:padding="@dimen/feeback_input_padding"
	    android:textColor="@color/color_999999"
	    android:textSize="@dimen/txt_small"
	    android:background="@drawable/com_square_border"/>
	<Button 
	    android:id="@+id/btn_submit"
	    android:layout_height="@dimen/btn_submit_height"
	    android:layout_width="match_parent"
	    android:layout_marginTop="@dimen/feeback_txt_padding"
	    android:layout_marginLeft="@dimen/title_bar_padding"
	    android:layout_marginRight="@dimen/title_bar_padding"
	    android:padding="@dimen/feeback_input_padding"
	    android:textColor="@color/color_57be17"
	    android:gravity="center"
	    android:textSize="@dimen/txt_small"
	    android:text="@string/ok"
	    android:background="@drawable/btn_round_border_57be17"/>
	</LinearLayout>
	</ScrollView>
</LinearLayout>
