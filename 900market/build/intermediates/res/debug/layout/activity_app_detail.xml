<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white" xmlns:app="http://schemas.android.com/apk/res/com.zxly.market">
    <include 
     android:id="@+id/title_bar"
     android:layout_height="@dimen/title_bar_height"
     android:layout_width="match_parent"
     layout="@layout/include_title_bar"/>
    <!--  
	<ImageButton
	    android:id="@+id/ibtn_share"
	    android:layout_width="wrap_content"
	    android:layout_height="@dimen/title_bar_height"
	    android:layout_alignParentRight="true"
	    android:paddingRight="@dimen/title_bar_padding"
	    android:paddingLeft="@dimen/title_bar_padding"
	    android:src="@drawable/btn_share" 
	    android:background="@drawable/bar_btn_bg"
	    />
	    -->
	<ImageButton
	    android:id="@+id/ibtn_search"
	    android:layout_width="wrap_content"
	    android:layout_height="@dimen/title_bar_height"
	    android:layout_alignParentRight="true"
	    android:paddingRight="@dimen/title_bar_padding"
	    android:paddingLeft="@dimen/title_bar_padding"
	    android:src="@drawable/btn_search" 
	    android:background="@drawable/bar_btn_bg"
	    />
	<com.zxly.market.view.PinnerHeadRelativeLayout 
	    android:id="@+id/rlt_content"
	    android:layout_below="@+id/title_bar"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	<RelativeLayout
	    android:id="@+id/head_"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	<com.zxly.market.view.RoundedImageView 
	    android:id="@+id/iv_app_icon"
	    app:r_corner_radius="@dimen/btn_radius"
	    android:layout_width="@dimen/app_icon_size"
	    android:layout_height="@dimen/app_icon_size"
	    android:scaleType="fitXY"
	    android:layout_margin="@dimen/app_icon_margin"/>
	
	<com.zxly.market.view.LimitLengthTextView 
	    android:id="@+id/tv_app_name"
	    style="@style/Txtstyle_30_333333"
	    android:textSize="@dimen/txt_big"
	    android:layout_toRightOf="@+id/iv_app_icon"
	    android:layout_alignTop="@+id/iv_app_icon"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:singleLine="true"/>
	<RatingBar 
        style="@style/MyRatingBar"
        android:id="@+id/rb_rank"
        android:layout_below="@+id/tv_app_name"
        android:layout_alignLeft="@+id/tv_app_name"
        android:layout_marginTop="@dimen/searchbar_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:rating="4"/>
	<TextView 
        android:id="@+id/tv_app_info"
        style="@style/Txtstyle_25_999999"
        android:singleLine="true"
        android:layout_below="@+id/rb_rank"
        android:layout_alignLeft="@+id/rb_rank"
        android:layout_marginTop="@dimen/searchbar_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="34.5M   18万人下载    6.001"/>
	
	<TextView 
        android:id="@+id/tv_plug_in"
        style="@style/Txtstyle_30_666666"
        android:textSize="@dimen/txt_small"
        android:singleLine="true"
        android:layout_below="@+id/iv_app_icon"
        android:layout_alignLeft="@+id/iv_app_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_noplug_in"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="@string/no_plug_in"/>
	<TextView 
        android:id="@+id/tv_hiden"
        style="@style/Txtstyle_30_666666"
        android:textSize="@dimen/txt_small"
        android:singleLine="true"
     	android:layout_toRightOf="@+id/tv_plug_in"
     	android:layout_alignBaseline="@+id/tv_plug_in"
     	android:layout_marginLeft="@dimen/ads_marginright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_ankou"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="@string/no_hidien"/>
	<TextView 
        android:id="@+id/tv_ads"
        style="@style/Txtstyle_30_666666"
        android:textSize="@dimen/txt_small"
        android:singleLine="true"
        android:layout_toRightOf="@+id/tv_hiden"
     	android:layout_alignBaseline="@+id/tv_hiden"
     	android:layout_marginLeft="@dimen/ads_marginright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_ads"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="@string/no_ads"/>
	<View 
	    android:id="@+id/v_diliver"
	    android:layout_below="@+id/tv_plug_in"
	    android:layout_marginTop="10dp"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/diliver_line_height"
	    android:background="@color/color_dddddd"/>
	</RelativeLayout>
	<include 
	    android:id="@+id/switch_pager"
	    android:layout_below="@+id/head_"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    layout="@layout/tab_switch_pagerview"
	   /> 
	</com.zxly.market.view.PinnerHeadRelativeLayout>
	<RelativeLayout
	    android:id="@+id/rlt_bottom"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:paddingBottom="@dimen/title_bar_padding"
	    android:background="@color/color_f5f5f5">
    <View 
	    android:id="@+id/diliver"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/diliver_line_height"
	    android:background="@color/color_dddddd"/>
     <Button 
       android:id="@+id/btn_down"
       android:textColor="@color/color_white"
       android:textSize="@dimen/txt_small"
       android:gravity="center"
       android:layout_below="@+id/diliver"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="@dimen/title_bar_padding"
	   android:layout_marginRight="@dimen/title_bar_padding"
	   android:layout_marginTop="@dimen/title_bar_padding"
       android:minHeight="36dp"
       android:background="@drawable/btn_round_noborder_57be17"
       android:text="@string/download"/>
      <Button 
		android:id="@+id/btn_comment"
		android:layout_below="@+id/diliver"
		android:textColor="@color/color_white"
		android:textSize="@dimen/txt_small"
		android:gravity="center"
		android:visibility="invisible"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/title_bar_padding"
		android:layout_marginRight="@dimen/title_bar_padding"
		android:layout_marginTop="@dimen/title_bar_padding"
		android:minHeight="@dimen/bottom_button_heigt"
		android:background="@drawable/btn_round_noborder_57be17"
		android:text="@string/btn_comment"/>
   </RelativeLayout>
    <include 
	    android:id="@+id/loading_view"
	    android:layout_below="@+id/title_bar"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    layout="@layout/commen_lodaing"/>
</RelativeLayout>
