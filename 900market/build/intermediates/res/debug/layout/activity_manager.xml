<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white">
   <include 
      android:id="@+id/title_bar"
      android:layout_height="@dimen/title_bar_height"
      android:layout_width="match_parent"
      layout="@layout/include_title_bar"/>
	<RelativeLayout 
	    android:id="@+id/rlt_download"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="@dimen/layout_paddingtop"
	    android:paddingBottom="@dimen/layout_paddingtop"
	    android:paddingLeft="@dimen/title_bar_padding"
	    android:paddingRight="@dimen/title_bar_padding"
	    android:background="@drawable/com_btn_bg">
	    <TextView
	        style="@style/Txtstyle_30_666666"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:gravity="center_vertical"
	        android:drawableRight="@drawable/icon_in"
	        android:text="@string/download_task"/>

	    <TextView
	        android:id="@+id/download_dot"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="30dp"
	        android:background="@drawable/bg_circle_red"
	       />
	    <TextView
	        android:id="@+id/download_big_dot"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="30dp"
	        android:background="@drawable/bg_circle_red"
	        android:gravity="center"
	        android:padding="1dp"
	        android:textColor="@color/color_white"
	        android:textSize="@dimen/txt_smaller" />

	</RelativeLayout>
	<View 
	    android:layout_width="match_parent" 
	    android:layout_height="@dimen/diliver_line_height" 
	    android:layout_marginLeft="@dimen/title_bar_padding" 
	    android:layout_marginRight="@dimen/title_bar_padding" 
	    android:background="@color/color_dddddd"/>
	<RelativeLayout 
	    android:id="@+id/rlt_app_update"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="@dimen/layout_paddingtop"
	    android:paddingBottom="@dimen/layout_paddingtop"
	    android:paddingLeft="@dimen/title_bar_padding"
	    android:paddingRight="@dimen/title_bar_padding"
	    android:background="@drawable/com_btn_bg">
	    <TextView
	        style="@style/Txtstyle_30_666666"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:gravity="center_vertical"
	        android:drawableRight="@drawable/icon_in"
	        android:text="@string/app_update"/>
	    <TextView 
	        android:id="@+id/update_dot"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="30dp"
	        android:background="@drawable/bg_circle_red"/>
	    <TextView 
	        android:id="@+id/update_big_dot"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/color_white"
	        android:textSize="@dimen/txt_smaller"
	        android:padding="1dp"
	        android:gravity="center"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="30dp"
	        android:background="@drawable/bg_circle_red"/>
	</RelativeLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/diliver_line_height"
	    android:layout_marginLeft="@dimen/title_bar_padding"
	    android:layout_marginRight="@dimen/title_bar_padding"
	    android:background="@color/color_dddddd"/>
	<RelativeLayout 
	    android:id="@+id/rlt_app_uninstall"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="@dimen/layout_paddingtop"
	    android:paddingBottom="@dimen/layout_paddingtop"
	    android:paddingLeft="@dimen/title_bar_padding"
	    android:paddingRight="@dimen/title_bar_padding"
	    android:background="@drawable/com_btn_bg">
	    <TextView
	        style="@style/Txtstyle_30_666666"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:gravity="center_vertical"
	        android:drawableRight="@drawable/icon_in"
	        android:text="@string/app_uninstall"/>
	</RelativeLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/diliver_line_height"
	    android:layout_marginLeft="@dimen/title_bar_padding"
	    android:layout_marginRight="@dimen/title_bar_padding"
	    android:background="@color/color_dddddd"/>
</LinearLayout>
