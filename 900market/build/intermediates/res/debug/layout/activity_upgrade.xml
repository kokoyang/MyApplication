<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">
     <include 
	     android:id="@+id/title_bar"
	     android:layout_height="@dimen/title_bar_height"
	     android:layout_width="match_parent"
	     layout="@layout/include_title_bar"/>
	<include 
	    android:id="@+id/lv_upgrade_app"
	    android:layout_below="@+id/title_bar"
	    android:layout_above="@+id/rlt_bottom"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    layout="@layout/default_listview"/>
	<RelativeLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="@dimen/title_bar_height"
	    android:layout_alignParentRight="true">
	 <View 
         android:layout_width="@dimen/diliver_line_height"
         android:layout_height="12dp"
         android:layout_centerVertical="true"
         android:layout_toLeftOf="@+id/tv_ignore_app"
         android:background="@color/color_dddddd"/>    
	<TextView 
	    android:id="@+id/tv_ignore_app"
	    style="@style/Txtstyle_30_666666"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:padding="@dimen/title_bar_padding"
	    android:gravity="center"
	    android:layout_alignParentRight="true"
	    android:text="@string/ignore_app"
	    android:background="@drawable/bar_btn_bg"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/rlt_bottom"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:paddingBottom="@dimen/title_bar_padding"
	    android:visibility="gone"
	    >
	  <View 
		    android:id="@+id/diliver"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/diliver_line_height"
		    android:background="@color/color_dddddd"/>
      <Button 
	       android:id="@+id/btn_upgrade"
	       android:layout_below="@+id/diliver"
	       android:textColor="@color/color_white"
	       android:textSize="@dimen/txt_small"
	       android:gravity="center"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:layout_marginLeft="@dimen/title_bar_padding"
		   android:layout_marginRight="@dimen/title_bar_padding"
		   android:layout_marginTop="@dimen/title_bar_padding"
	       android:minHeight="@dimen/bottom_button_heigt"
	       android:background="@drawable/btn_round_noborder_57be17"
	       android:text="@string/one_key_upgrade"/>
	</RelativeLayout>
	<include 
	    android:id="@+id/loading_view"
	    android:layout_below="@+id/title_bar"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    layout="@layout/commen_lodaing"/>
</RelativeLayout>
